  <sql id="selectTopicSql">
    select
    <include refid="dto_topic_column_list" />
    from t_topic t 
        inner join t_user_profile au
            on t.author_id = au.id
        inner join t_post mp
            on t.main_post_id = mp.id
        inner join t_post lp
            on t.last_reply_post_id = lp.id
        inner join t_forum f
            on t.forum_id = f.id
        inner join t_user_profile lrpl
            on lp.author_id = lrpl.id            
  </sql>
