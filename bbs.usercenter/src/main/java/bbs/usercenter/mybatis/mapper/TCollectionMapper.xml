  <sql id="selectForumCollectionSql">
    select c.id as id, c.collection_type as collection_type, c.forum_id as forum_id, f.forum_name as forum_name 
    from t_collection c inner join t_forum f
        on c.forum_id = f.id and c.collection_type = 0
    where c.user_id = #{userId}
    <include refid="limit" />
  </sql>
  <sql id="selectFollowingCollectionSql">
    select c.id as id, c.collection_type as collection_type, c.following_id as following_id, u.nickname as following_nickname
    from t_collection c inner join t_user_profile u 
        on c.user_id = u.id and c.collection_type = 3
    where c.user_id = #{userId}
    <include refid="limit" />
  </sql>
  <sql id="selectTopicCollectionSql">
    select c.id as id, c.collection_type as collection_type, c.topic_id as topic_id, t.title as topic_title
    from t_collection c inner join t_topic t
        on c.topic_id = t.id and c.collection_type = 1
    where c.user_id = #{userId}
    <include refid="limit" />
  </sql>
  <sql id="selectPostCollectionSql">
    select c.id as id, c.collection_type as collection_type, c.post_id as post_id, p.content as post_content
    from t_collection c inner join t_post p
        on c.post_id = p.id and c.collection_type = 2
    where c.user_id = #{userId}
    <include refid="limit" />
  </sql>
  
